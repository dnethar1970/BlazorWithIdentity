{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=ClientSideAuthWithBlazor;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSecurityKey": "Random_Key",
  "JwtIssuer": "https://localhost", //set to the domain of the API
  "JwtAudience": "https://localhost", //set to the domain the client app is running on
  "JwtExpiryInDays": 1
}
